{
  "extends": [
	"eslint:recommended",
	"google"
  ],
  "parser": "babel-eslint",
  "plugins": [
	"import"
  ],
  "parserOptions": {
	"ecmaVersion": 2017,
	"sourceType": "module"
  },
  "env": {
	"node": true,
	"es6": true,
	"jest": true
  },
  "rules": {
	"no-empty": "off",
	"no-empty-pattern": "off",
	"no-trailing-spaces": "off",
	"brace-style": "off",
	"max-len": "off",
	"no-console": 0,
	"no-unused-vars": "off",
	"no-tabs": "off",
	"prefer-spread": "off",
	"new-cap": "off",
	"prefer-rest-params": "off",
	"no-use-before-define": "off",
	"linebreak-style": "off",
	"no-invalid-this": "off",
	"curly": "off",
	"comma-dangle": "off",
	"camelcase": "off",
	"arrow-parens": "off",
	"object-curly-spacing": "off",
	"space-before-function-paren": "off",
	"indent": [
	  2,
	  "tab"
	],
	"require-jsdoc": [
	  "error",
	  {
		"require": {
		  "FunctionDeclaration": true,
		  "MethodDefinition": true,
		  "ClassDeclaration": true,
		  "ArrowFunctionExpression": true,
		  "FunctionExpression": false
		}
	  }
	]
  }
}
